{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run C++",
      "type": "shell",
      "command": "g++ ${file} -o ${fileDirname}/output && ${fileDirname}/output",
      "group": "build",
      "problemMatcher": [],
      "detail": "Compiles and runs the C++ file."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}